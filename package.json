{
  "name": "hyperliquid-mm-bot",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "TS_NODE_TRANSPILE_ONLY=1 node --loader ts-node/esm src/mm_hl.ts",
    "deploy": "./deploy.sh",
    "sim": "TS_NODE_TRANSPILE_ONLY=1 node --loader ts-node/esm src/utils/paper_sim.ts",
    "kelly": "TS_NODE_TRANSPILE_ONLY=1 node --loader ts-node/esm -e \"import('./src/utils/position_sizing.ts').then(m=>console.log(m.positionSizeUSD({winProb:0.55,winRatio:1.4,bankrollUsd:10000})))\"",
    "kill:on": "TS_NODE_TRANSPILE_ONLY=1 node --loader ts-node/esm src/utils/kill_switch.ts on",
    "kill:off": "TS_NODE_TRANSPILE_ONLY=1 node --loader ts-node/esm src/utils/kill_switch.ts off",
    "volatility": "TS_NODE_TRANSPILE_ONLY=1 node --loader ts-node/esm -e \"import('./src/api/hyperliquid.ts').then(async m=>{const api=new m.HyperliquidAPI();const scores=await api.calculateVolatilityScores();console.log(scores.slice(0,10))})\""
  },
  "dependencies": {
    "@nktkas/hyperliquid": "^0.25.7",
    "axios": "^1.13.1",
    "canvas": "^3.2.0",
    "dotenv": "^16.4.5",
    "ethers": "^6.15.0",
    "node-fetch": "^3.3.2",
    "openai": "^6.9.1",
    "pino": "^9.5.0",
    "technicalindicators": "^3.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/ws": "^8.18.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.6.3"
  }
}
