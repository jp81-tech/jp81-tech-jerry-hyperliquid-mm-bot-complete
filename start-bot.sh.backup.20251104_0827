#!/usr/bin/env bash
set -euo pipefail
cd "$(dirname "$0")"
set -a
. ./.env
set +a
export TS_NODE_CACHE=false
echo "ENV BASE_ORDER_USD=$BASE_ORDER_USD CLIP_USD=${CLIP_USD:-} MAKER_SPREAD_BPS=$MAKER_SPREAD_BPS ACTIVE_LAYERS=$ACTIVE_LAYERS MIN_NOTIONAL_USD=$MIN_NOTIONAL_USD"
./stop-bot.sh || true
npm start >> bot.log 2>&1 &
